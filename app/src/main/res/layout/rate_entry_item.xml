<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dimension5dp"
    card_view:cardElevation="@dimen/dimension4dp"
    card_view:cardCornerRadius="@dimen/dimension5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimension5dp"
            >

            <TextView
                android:id="@+id/tvItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Books"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvItem"
                android:ellipsize="end"
                android:text="1kg - 20Rs"
                android:textSize="@dimen/dimension14dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimension5dp"
            android:layout_gravity="center"
            >


            <Button
                android:id="@+id/btAdd"
                android:layout_width="@dimen/dimension60dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="+"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:theme="@style/PrimaryButton"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/tvUnitValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/btAdd"
                android:layout_toLeftOf="@+id/btMinus"
                android:gravity="center"
                android:paddingLeft="@dimen/dimension2dp"
                android:paddingRight="@dimen/dimension2dp"
                android:text="1(kg)"
                />

            <Button
                android:id="@+id/btMinus"
                android:layout_width="@dimen/dimension60dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="-"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:theme="@style/PrimaryButton"
                android:textColor="@color/colorPrimaryDark"
                />


        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
